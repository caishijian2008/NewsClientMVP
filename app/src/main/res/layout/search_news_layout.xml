	<RelativeLayout 
	    android:id="@+id/searchBox_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/image_search_searchbox"
	    android:layout_marginTop="0dp"
	    >
	    <EditText
	        android:id="@+id/search_news_txt"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/search_button"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="8dp"
			android:singleLine="true"
			android:textSize="16sp"
	        android:hint="@string/search_news" />

		<Button
			android:id="@+id/search_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@drawable/search_button_selector"/>
	    
	</RelativeLayout>
	<ImageView 
	    android:id="@+id/search_news_image"
	    android:layout_width="wrap_content" 
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:src="@drawable/image_prompt_smiley"/>
</LinearLayout>